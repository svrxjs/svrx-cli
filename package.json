{
  "name": "root",
  "description": "CLI tool for svrx.",
  "private": true,
  "scripts": {
    "lint": "eslint \"**/*.js\"",
    "fix": "eslint \"**/*.js\" --fix",
    "test": "lerna run test",
    "clean": "lerna clean -y && rimraf -rf node_modules",
    "changelog": "lerna-changelog",
    "lerna:version": "lerna version",
    "lerna:publish": "lerna publish from-git --yes",
    "version": "lerna clean --yes && lerna bootstrap --ignore-scripts -- --no-audit && git add packages/*/package-lock.json",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "expect.js": "^0.3.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.2",
    "lerna-changelog": "^0.8.2",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x-orpheus/svrx-cli.git"
  },
  "keywords": [
    "svrx",
    "cli",
    "mock",
    "dev-server"
  ],
  "author": "x-orpheus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/x-orpheus/svrx-cli/issues"
  },
  "homepage": "https://svrx.gitbook.io/docs/"
}
